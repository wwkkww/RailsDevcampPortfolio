<h1>PORTFOLIO ITEMS</h1>

<h5>Option 1</h5>
<a href="/portfolios/new">Create New Item</a>

<h5>Option 2</h5>
<%= link_to "Create new item", new_portfolio_path %>


<p>new_portfolio_url: <%= new_portfolio_url %></p>
<p>new_portfolio_path: <%= new_portfolio_path %></p>

<% @portfolio_items.each do |item| %>
  <p><h3><%= link_to item.title, portfolio_path(item) %></h3></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <p>
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  </p>
  <p>
    <%= link_to "Edit", edit_portfolio_path(item)  %>
    <a href="/portfolios/<%= item.id %>/edit">Change</a>  
  </p>
  <p>
    <%= link_to "Delete", portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' }  %> 
  </p>

  <hr>
<% end %>